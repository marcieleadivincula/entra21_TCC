@{
    ViewData["Title"] = "Colaborador";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Colaborador</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="./css/main.css">
    <link rel="stylesheet" type="text/css" href="./css/util.css">
    <!--===============================================================================================-->
</head>
<body>


    <div class="limiter">

        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form">
                    <span class="login100-form-title p-b-26">
                        Colaborador
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <input class="input100" type="text" name="fullname">
                        <span class="focus-input100" data-placeholder="Nome completo"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <input class="input100" type="text" name="clinica">
                        <span class="focus-input100" data-placeholder="Clínica"></span>
                        @* Trazer a lista de clínicas *@
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <input class="input100" type="text" name="funcao">
                        <span class="focus-input100" data-placeholder="Função"></span>
                        @* Trazer a lista de funções *@
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <input class="input100" type="text" name="pais">
                        <span class="focus-input100" data-placeholder="Pais"></span>
                        @* Trazer a lista de países *@
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <input class="input100" type="text" name="estado">
                        <span class="focus-input100" data-placeholder="Estado"></span>
                        @* Trazer a lista de estados *@
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <input class="input100" type="text" name="cidade">
                        <span class="focus-input100" data-placeholder="Cidade"></span>
                        @* Trazer a lista de cidades *@
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <input class="input100" type="text" name="bairro">
                        <span class="focus-input100" data-placeholder="Bairro"></span>
                        @* Trazer a lista de bairros *@
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <input class="input100" type="text" name="logradouro">
                        <span class="focus-input100" data-placeholder="Logradouro"></span>
                        @* Trazer a lista de logradouros *@
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <input class="input100" type="text" name="cep">
                        <span class="focus-input100" data-placeholder="CEP"></span>
                        @* Trazer a lista de CEP *@
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <input class="input100" type="text" name="numeroCasa">
                        <span class="focus-input100" data-placeholder="Número"></span>
                        @* Trazer a lista de número *@
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <input class="input100" type="text" name="cro">
                        <span class="focus-input100" data-placeholder="CRO"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <input class="input100" type="text" name="croEstado">
                        <span class="focus-input100" data-placeholder="Estado do CRO"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <input class="input100" type="button" name="contatos" value="Meus contatos">
                        @* Criar um botão que leve para a página de contatos *@
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <input class="input100" type="date" name="dtAdmissao">
                        <span class="focus-input100" data-placeholder="Data de Admissão"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <input class="input100" type="date" name="dtDemissao">
                        <span class="focus-input100" data-placeholder="Data de Demissão"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <input class="input100" type="checkbox" name="demitido">
                        <span class="focus-input100" data-placeholder="Demitido"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <input class="input100" type="checkbox" name="ferias">
                        <span class="focus-input100" data-placeholder="Férias"></span>
                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn">
                                Salvar
                            </button>
                        </div>
                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn">
                                Atualizar
                            </button>
                        </div>
                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn">
                                Deletar
                            </button>
                        </div>
                    </div>

                    <div class="text-center p-t-115">
                        <span class="login100-form-title p-b-26">
                            Lista de colaboradores
                        </span>
                        @* Trazer a lista de colaboradores com id, nome, cro, croEstado, dtAdmissão,dtDemissão, Função, Férias, demitido, cep, número,nome do logradouro, bairro, cidade, estado e país *@
                    </div>

                </form>
            </div>
        </div>

    </div>

    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/bootstrap/js/popper.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/daterangepicker/moment.min.js"></script>
    <script src="vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="./js/main.js"></script>

</body>
</html>