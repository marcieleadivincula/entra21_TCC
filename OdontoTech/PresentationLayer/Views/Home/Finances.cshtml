@using DataAccessLayer;
@using Domain;
@using BusinessLogicalLayer;
@{
    ViewData["Title"] = "Finances";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="~/css/finances.css" rel="stylesheet" />

    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,400;0,700;1,100;1,400;1,700&display=swap"
          rel="stylesheet" />

    <title>Finances | OdontoTech</title>
</head>

<body>
    <header id="page-create-point">
        @*<h1 id="logo">Finanças|OdontoTech</h1>*@
        @*<img src="~/images/assets/logo.svg" alt="Logo OdontoTech" />*@
        <img src="#" alt="Logo da OdontoTech" />

        <a href="/index.html">
            <span></span>
            Voltar para home
        </a>
    </header>

    <main class="container">
        <section id="balance">
            <h2 class="sr-only">Balanço</h2>
            <div class="card">
                <h3>
                    <span>Entradas</span>
                    <img src="~/images/assets/income.svg" alt="Imagem de entradas" />
                </h3>
                <p id="incomeDisplay"></p>
            </div>

            <div class="card">
                <h3>
                    <span>Saídas</span>
                    <img src="~/images/assets/expense.svg" alt="Imagem de saídas" />
                </h3>
                <p id="expenseDisplay"></p>
            </div>

            <div class="card total">
                <h3>
                    <span>Total</span>
                    <img src="~/images/assets/total.svg" alt="Imagem do total" />
                </h3>
                <p id="totalDisplay"></p>
            </div>
        </section>

        <section id="transaction">
            <h2 class="sr-only">Transações</h2>
            <a href="#" class="button new" id="new-transaction">+ Nova Transação</a>
            <table id="data-table">
                <thead>
                    <tr>
                        <th class="description">#</th>
                        <th>Data do pagamento</th>
                        <th>Valor</th>
                        <th>Tipo de pagamento</th>
                        <th>Paciente</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        PagamentoBLL bll = new PagamentoBLL();
                        List<Pagamento> lista = bll.GetAll();

                        TipoPagamentoBLL tipoPagamentoBLL = new TipoPagamentoBLL();
                        List<TipoPagamento> tipos = tipoPagamentoBLL.GetAll();

                        PacienteBLL pacientebll = new PacienteBLL();
                        List<Paciente> pacientes = pacientebll.GetAll();
                    }
                    @foreach (var item in lista)
                    {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.DataPagamento</td>
                        <td>@item.ValorPagamento</td>
                        @foreach (var tip in tipos)
                        {
                            <td>@tip.Tipo</td>
                        }

                        @foreach (var pac in pacientes)
                        {
                            <td>@pac.Nome</td>
                        }
                        <td>
                            <img onclick="Transaction.remove(${index})" src="~/images/assets/plus.svg" alt="Atualizar estado" />
                        </td>
                        <td>
                            <img onclick="Transaction.remove(${index})" src="~/images/assets/minus.svg" alt="Remover estado" />
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </section>
    </main>

    <div class="modal-overlay">
        <div class="modal">
            <div class="form">
                <h2>Nova Transação</h2>
                <form action="" onsubmit="Form.submit(event)">
                    <div class="input-group">
                        <label class="sr-only" for="description">Descrição</label>
                        <input type="text"
                               id="description"
                               name="description"
                               placeholder="Descrição" />
                    </div>

                    <div class="input-group">
                        <label class="sr-only" for="amount">Valor</label>
                        <input type="number"
                               step="0.01"
                               id="amount"
                               name="amount"
                               placeholder="0,00" />
                        <small class="help">
                            Use o sinal - (negativo) para despesas e , (vírgula) para casas
                            decimais
                        </small>
                    </div>

                    <div class="input-group">
                        <label class="sr-only" for="date">Data</label>
                        <input type="date" id="date" name="date" />
                    </div>

                    <div class="input-group actions">
                        <a href="#" class="button cancel" id="cancel-trans">Cancelar</a>
                        <button>Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <footer>
        <p>@DateTime.Now.Year - OdontoTech</p>
    </footer>

    <script src="~/js/finances.js"></script>
</body>
</html>
