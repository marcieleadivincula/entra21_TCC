@{
    ViewData["Title"] = "Paciente";
}


<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Paciente</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="./css/util.css">
    <link rel="stylesheet" type="text/css" href="./css/main.css">
    <!--===============================================================================================-->
</head>
<body>


    <div class="limiter">

        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form">
                    <span class="login100-form-title p-b-26">
                        Paciente
                    </span>

                    <label style="color:dimgrey;font-size:13px"> Dados pessoais. </label>
                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">

                        <input class="input100" type="text" name="firstName" value="@ViewBag.firstName">

                        <span class="focus-input100" data-placeholder="Nome"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">

                        <input class="input100" type="text" name="lastName" value="@ViewBag.lastName">

                        <span class="focus-input100" data-placeholder="Sobrenome"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">

                        <input class="input100" type="text" name="cpf" value="@ViewBag.cpf">

                        <span class="focus-input100" data-placeholder="CPF"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">

                        <input class="input100" type="text" name="rg" value="@ViewBag.rg">

                        <span class="focus-input100" data-placeholder="RG"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">

                        <input class="input100" type="date" name="dtNascimento" value="@ViewBag.dtNascimento">

                        <span class="focus-input100" data-placeholder="Data de Nascimento"></span>
                    </div>

                    <label style="color:dimgrey;font-size:13px"> Dados de moradia. </label>
                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">

                        <input class="input100" type="text" name="pais" value="@ViewBag.pais">

                        <span class="focus-input100" data-placeholder="Pais"></span>
                        @* Trazer a lista de países *@
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">

                        <input class="input100" type="text" name="estado" value="@ViewBag.estado">

                        <span class="focus-input100" data-placeholder="Estado"></span>
                        @* Trazer a lista de estados *@
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">

                        <input class="input100" type="text" name="cidade" value="@ViewBag.cidade">

                        <span class="focus-input100" data-placeholder="Cidade"></span>
                        @* Trazer a lista de cidades *@
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">

                        <input class="input100" type="text" name="bairro" value="@ViewBag.bairro">

                        <span class="focus-input100" data-placeholder="Bairro"></span>
                        @* Trazer a lista de bairros *@
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">

                        <input class="input100" type="text" name="logradouro" value="@ViewBag.logradouro">

                        <span class="focus-input100" data-placeholder="Logradouro">
                        </span>
                        @* Trazer a lista de logradouros *@
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">

                        <input class="input100" type="text" name="cep" value="@ViewBag.cep">

                        <span class="focus-input100" data-placeholder="CEP"></span>
                        @* Trazer a lista de CEP *@
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">

                        <input class="input100" type="text" name="numeroCasa" value="@ViewBag.numeroCasa">

                        <span class="focus-input100" data-placeholder="Número"></span>
                        @* Trazer a lista de número *@
                    </div>
                    <label style="color:dimgrey;font-size:13px"> Dados extras </label>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">

                        <input class="input100" type="button" name="contatos" value="Meus contatos">


                        @*
            <input class="input100" type="button" name="contatos" value="Meus contatos">

                  Criar um botão que leve para a página de contatos *@
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">

                        <input class="input100" type="text" name="observacoes" value="@ViewBag.observacoes">

                        <span class="focus-input100" data-placeholder="Observações"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">

                        <input class="input100" type="text" name="idPaciente" value="@ViewBag.idPaciente">

                        <label style="color:dimgrey;font-size:13px"> Somente para deletar e atualizar. </label>

                        <span class="focus-input100" data-placeholder="idPaciente"></span>
                    </div>

                    @{
                        if (Convert.ToString(ViewData["result"]) != "")
                        {
                            if (Convert.ToString(ViewData["result"]).Contains("!"))
                            {
                                <label style="color:green;font-size:13px"> @ViewData["result"] </label>
                            }
                            else
                            {

                                <label style="color:red;font-size:13px"> @ViewData["result"] </label>
                            }

                        }

                    }

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn" name="funcao" type="submit" value="Salvar" onclick=" @{

                                ViewData["btn"] = "Salvar";

                            }">
                                Salvar
                            </button>
                        </div>
                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn" name="funcao" type="submit" value="Atualizar" onclick=" @{

                                ViewData["btn"] = "Atualizar";

                            }">
                                Atualizar
                            </button>
                        </div>
                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn" name="funcao" type="submit" value="Deletar" onclick=" @{

                                ViewData["btn"] = "Deletar";

                            }">
                                Deletar
                            </button>
                        </div>
                    </div>

                    <div class="text-center p-t-115">
                        <span class="login100-form-title p-b-26">
                            Lista de pacientes
                        </span>
                        @* Trazer a lista de pacientes com id, nome,sobrenome, cpf, rg, observações,dtNascimento, cep, número,nome do logradouro, bairro, cidade, estado e país *@
                    </div>

                </form>
            </div>
        </div>

    </div>

    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/bootstrap/js/popper.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/daterangepicker/moment.min.js"></script>
    <script src="vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="./js/main.js"></script>

</body>
</html>
