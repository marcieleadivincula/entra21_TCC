@using BusinessLogicalLayer
@{
    ViewData["Title"] = "Estoque";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Estoque</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="./css/main.css">
    <link rel="stylesheet" type="text/css" href="./css/util.css">
    <!--===============================================================================================-->
</head>
<body>


    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form" action="/Home/Estoque" method="post">
                    <span class="login100-form-title p-b-26">
                        Estoque
                    </span>
                    <label style="color:darkgray; font-size:15px; margin-left:5px;">Produto</label>
                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">

                        @*<input class="input100" type="text" name="produto">*@

                        <select id="produto" >

                            @{
                                ProdutoBLL bll = new ProdutoBLL();

                                List<Domain.Produto> Lista = bll.GetAll();

                                for (int i = 0; i < Lista.Count; i++)
                                {
                                    <option value="@ViewBag.Nome">@Lista[i].Nome</option>
                                }
                            }
                        </select>
                                    <input type="hidden" name="produto" value="@ViewBag.Nome" />

                        <span class="focus-input100" data-placeholder=""></span>
                        @* Trazer a lista de produto *@
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <input class="input100" type="text" name="qtdProduto">
                        <span class="focus-input100" data-placeholder="Quantidade de produto"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <label style="color:darkgray; font-size:15px; margin-left:5px;">Data de entrada</label>
                        <input class="input100" type="date" name="dtEntrada">
                        <span class="focus-input100" data-placeholder=""></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <label style="color:darkgray; font-size:15px; margin-left:5px;">Data de saída</label>
                        <input class="input100" type="date" name="dtSaida">
                        <span class="focus-input100" data-placeholder=""></span>
                    </div>

                    <label style="color:darkgray; font-size:15px; margin-left:5px;">Id do Estoque</label>
                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <select id="idEstoque">

                            @{
                                EstoqueBLL blle = new EstoqueBLL();

                                List<Domain.Estoque> Estoques = blle.GetAll();

                                for (int i = 0; i < Estoques.Count; i++)
                                {
                                    <option value="@Estoques[i].Id">@Estoques[i].Id</option>
                                }
                            }

                        </select>
                        <span class="focus-input100" data-placeholder=""></span>
                        <label style="color:dimgrey;font-size:13px"> Somente para deletar e atualizar. </label>
                    </div>


                    @{
                        if (Convert.ToString(ViewData["result"]) != null)
                        {
                            if (Convert.ToString(ViewData["result"]).Contains("!"))
                            {
                                <label style="color:green"> @ViewData["result"] </label>
                            }
                            else
                            {

                                <label style="color:red;font-size:13px"> @ViewData["result"] </label>
                            }

                        }

                    }

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn" name="funcao" type="submit" value="Salvar" onclick=" @{

                                ViewData["btn"] = "Salvar";

                            }">
                                Salvar
                            </button>
                        </div>
                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn" name="funcao" type="submit" value="Atualizar" onclick=" @{

                                ViewData["btn"] = "Atualizar";

                            }">
                                Atualizar
                            </button>
                        </div>
                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn" name="funcao" type="submit" value="Deletar" onclick=" @{

                                ViewData["btn"] = "Deletar";

                            }">
                                Deletar
                            </button>
                        </div>
                    </div>

                </form>

                <div class="text-center p-t-115">
                    <span class="login100-form-title p-b-26">
                        Lista do estoque
                    </span>

                    @{
                        EstoqueBLL bllee = new EstoqueBLL();

                        List<Domain.Estoque> Estoquees = bllee.GetAll();

                        for (int i = 0; i < Estoquees.Count; i++)
                        {
                            <label> @Estoquees[i].Id  @Estoquees[i].Produto.Nome @Estoquees[i].QtdProduto @Estoquees[i].DataEntrada  @Estoquees[i].DataSaida <br /> </label>
                        }

                    }
                </div>

            </div>
        </div>

    </div>

    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/bootstrap/js/popper.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="./js/main.js"></script>


</body>
</html>